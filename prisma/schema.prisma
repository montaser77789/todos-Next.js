datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  slug     String @unique
  title    String
  body     String
  author   User   @relation(fields: [authorId], references: [id])
  authorId String @db.ObjectId
}

model User {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId
  email   String   @unique
  name    String?
  address Address?
  posts   Post[]
}

model Todo {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  body      String?
  completed Boolean  @default(false)
  createdAt DateTime @default(now())
}

type Address {
  street String
  city   String
  state  String
  zip    String
}
